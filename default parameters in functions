#include<iostream>
using namespace std;

int sum  (int a, int b, int c=0, int d=7){ // you can only define values to the right side meaning
                                            // the given function signature is not allowed (int a, int b, int c=0, int d);

    
    return (a+b+c+d);
    
}

int main(){
    
    cout <<" sum of 1 + 2 + 3 + 4 = "<< sum(1,2,3,4)<<endl;
    cout <<" sum of 1 + 2  = "<< sum(1,2)<<endl;
    
    return 0;
}
