#include <iostream>
#include <fstream> //used for file handling
using namespace std;


struct Person{
    char name[100];
    int age;
    double salary;
    
};

int main (){
    
    //a structure is a group of data elemaents grouped together under one name.
    
    Person p1;
    cout <<" Enter person details \n"<<" Enter Person name: "<<endl;
    cin.getline(p1.name, 100);//inorder to access individual data types in the structure we use .
    cout <<"Enter age "<<endl;
    cin>>p1.age;
    cout<<"Enter salaray "<<endl;
    cin>>p1.salary;
    
    cout <<"Person details are as follows"<<endl;
    cout << p1.name<<" "<<p1.age<<" "<<p1.salary<<endl;
    
    

    
}
