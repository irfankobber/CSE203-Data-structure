#include<iostream>
using namespace std;

// function overloading allows us to use the same function name for many fuctions which do some slightly different tasks
// an overloaded function must have
//1 different type of parameters
//2. different number of parameters
//3. different sequnce of parameters 


int add(int a, int b){//1
    return a+b;
}
double add(double a, double b){//2
    
    
    return a+b;
}

double add(int a, double b){
    return a+b;
    
}
double add(double a, int b){
    return a+b;
}
int main(){
    cout <<add(1.2,2)<<endl;
    
    return 0;
}
